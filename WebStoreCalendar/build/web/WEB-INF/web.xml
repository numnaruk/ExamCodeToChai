<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>CalendarController</servlet-name>
        <servlet-class>th.co.gosoft.webcalendar.CalendarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>th.co.gosoft.webcalendar.member.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>th.co.gosoft.webcalendar.member.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalendarDay</servlet-name>
        <servlet-class>th.co.gosoft.webcalendar.CalendarDay</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>readd</servlet-name>
        <servlet-class>th.co.gosoft.webcalendar.readd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainCalendar</servlet-name>
        <servlet-class>th.co.gosoft.webcalendar.MainCalendar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImportExcel</servlet-name>
        <servlet-class>th.co.gosoft.webcalendar.ImportEventByExcel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImportEventByExcel</servlet-name>
        <servlet-class>th.co.gosoft.webcalendar.ImportEventByExcel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DirectLimeSurvay</servlet-name>
        <servlet-class>th.co.gosoft.webcalendar.DirectLimeSurvay</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalendarController</servlet-name>
        <url-pattern>/CalendarController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalendarDay</servlet-name>
        <url-pattern>/CalendarDay</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>readd</servlet-name>
        <url-pattern>/readd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/CheckLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainCalendar</servlet-name>
        <url-pattern>/MainCalendar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImportExcel</servlet-name>
        <url-pattern>/ImportExcel.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImportEventByExcel</servlet-name>
        <url-pattern>/ImportEventByExcel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DirectLimeSurvay</servlet-name>
        <url-pattern>/DirectLimeSurvay</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
           30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <!--                <welcome-file>index.jsp</welcome-file>-->
        <!--             <welcome-file>/jsp/calendar.jsp</welcome-file>-->
        <welcome-file>MainCalendar.do</welcome-file>
    </welcome-file-list>
</web-app>
